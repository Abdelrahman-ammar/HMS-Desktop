        <Label x:Name="labelid" Content="" HorizontalAlignment="Left" Margin="164,272,0,0" VerticalAlignment="Top" Foreground="#FFBD8484" FontWeight="Bold" Background="#FF201C1C"/>
        <Label x:Name="labeld2" Content="" HorizontalAlignment="Left" Margin="585,367,0,0" VerticalAlignment="Top" Foreground="#FF201C1C" FontWeight="Bold" FontFamily="Rockwell" FontSize="14"/>
        <Label x:Name="labeld1" Content="" HorizontalAlignment="Left" Margin="585,321,0,0" VerticalAlignment="Top" Foreground="#FF201C1C" FontWeight="Bold" FontFamily="Rockwell" FontSize="14"/>
        <Label x:Name="labels" Content="" HorizontalAlignment="Left" Margin="176,315,0,0" VerticalAlignment="Top" Foreground="#FF201C1C" FontWeight="Bold" FontFamily="Rockwell" FontSize="14"/>
