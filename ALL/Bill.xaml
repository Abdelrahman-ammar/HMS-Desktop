            </WrapPanel.Background>
        </WrapPanel>
        <Label Content="Successfully Payment" HorizontalAlignment="Left" Margin="41,31,0,0" VerticalAlignment="Top" FontSize="30" FontFamily="Brush Script MT" Foreground="#FFEDDFD2" Height="61" Width="247"/>
