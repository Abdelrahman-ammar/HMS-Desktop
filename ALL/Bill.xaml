        <Button Content="" HorizontalAlignment="Left" Margin="276,34,0,0" VerticalAlignment="Top" Height="39" Width="47">
            <Button.Background>
                <ImageBrush ImageSource="/Bill.jpg"/>
            </Button.Background>
        </Button>
        <Button Margin="603,18,73,367" Opacity="0.8" Content="         Home" FontSize="23" Height="NaN" Background="#00000000" Foreground="#FFFDFCFC" Width="NaN" FontFamily="Centaur" BorderBrush="Transparent" Cursor="Hand" Click="Home_Click">
            <Button.Template>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="10">
                        <ContentPresenter />
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>

    </Grid>

</Window>
